@model PagedList.IPagedList<LeafShop.Models.SanPham>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "Index";
}

<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="page-title">
        <div class="title_left">
            <h3>Quản lý sản phẩm</h3>
        </div>
    </div>
    <div class="x_panel">
        <div class="x_content">
            <div class="row">
                <div class="col-sm-6">
                    <span class="glyphicon glyphicon-plus"></span>@Html.ActionLink("Thêm mới", "Create")
                </div>
                <div class="col-sm-6">
                    <div id="datatable_filter" class="dataTables_filter">
                        Tìm kiếm:  <label><input type="search" class="form-control input-sm" placeholder=""></label>
                    </div>
                </div>
            </div>
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>
                            Tên danh mục
                        </th>
                        <th>
                            Tên khu vực
                        </th>
                        <th>
                            Tên thương hiệu
                        </th>
                        <th>
                            Tên sản phẩm
                        </th>
                        <th>
                            Đơn vị tính
                        </th>
                        <th>
                            Số lượng
                        </th>
                        <th>
                            Số lượng bán
                        </th>
                        <th>
                            Đơn giá
                        </th>
                        <th>
                            Mô tả
                        </th>
                        <th>
                            Ngày cập nhật
                        </th>
                        <th>
                            Hình minh hoạ
                        </th>
                        <th>
                            Bình luận
                        </th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                @foreach (var item in Model)
                {
            <tbody>
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.DanhMuc.TenDanhMuc)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.KhuVuc.TenKhuVuc)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ThuongHieu.TenThuongHieu)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TenSanPham)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DonViTinh)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SoLuong)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SoLuongBan)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DonGia)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MoTa)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NgayCapNhat)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HinhMinhHoa)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BinhLuan)
                    </td>
                    <td>
                        @Html.ActionLink("Cập nhật", "Edit", new { id = item.MaSanPham }) |
                        @Html.ActionLink("Chi tiết", "Details", new { id = item.MaSanPham }) |
                        @Html.ActionLink("Xoá", "Delete", new { id = item.MaSanPham })
                    </td>
                </tr>
            </tbody>
                }
            </table>
            <br />
            Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
            @Html.PagedListPager(Model, page => Url.Action("Index", new
            {
                page,
            currentFilter = ViewBag.CurrentFilter
            }))
        </div>
    </div>
</div>