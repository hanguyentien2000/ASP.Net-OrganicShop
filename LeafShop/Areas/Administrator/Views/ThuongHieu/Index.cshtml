@model PagedList.IPagedList<LeafShop.Models.ThuongHieu>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "Index";
}

<h2>Quản lý thương hiệu</h2>
<br />
<p>
    <span class="glyphicon glyphicon-plus"></span>@Html.ActionLink(" Thêm mới", "Create")
</p>
<table class="table table-bordered table-hover">
    <tr>
        <th>
            Tên thương hiệu
        </th>
        <th>
            Địa chỉ thương hiệu
        </th>
        <th>
            Điện thoại thương hiệu
        </th>
        <th>Thao tác</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenThuongHieu)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiaChiThuongHieu)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DienThoaiThuongHieu)
            </td>
            <td>
                @Html.ActionLink("Cập nhật", "Edit", new { id = item.MaThuongHieu }) |
                @Html.ActionLink("Chi tiết", "Details", new { id = item.MaThuongHieu }) |
                @Html.ActionLink("Xoá", "Delete", new { id = item.MaThuongHieu })
            </td>
        </tr>
    }

</table>
<br />
            Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
            @Html.PagedListPager(Model, page => Url.Action("Index", new
            {
                page,
            currentFilter = ViewBag.CurrentFilter
            }))