    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xoá" class="btn btn-default" onclick="return confirmDelete()"/> |
            @Html.ActionLink("Quay trở lại", "Index")
        </div>
    }
