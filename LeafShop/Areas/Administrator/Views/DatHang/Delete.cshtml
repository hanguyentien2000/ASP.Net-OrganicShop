@if (ViewBag.Error != null)
{
    <br />
    <div class="alert alert-danger col-lg-2" role="alert">@ViewBag.Error</div>
}

<script>
    function confirmDelete() {
        var result = confirm('Bạn có chắc chắn muốn XÓA?')
        if (result) {
            alert('XÓA THÀNH CÔNG!!!')
            return true;
        }
        else {
            return false;
        }
    }
</script>